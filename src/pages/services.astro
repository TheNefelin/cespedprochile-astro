---
import Header from "../components/Header.astro";
import PageLayout from "../layouts/PageLayout.astro";
import RequestQuote from "../components/RequestQuote.astro";
import ServiceCard from "../components/ServiceCard.astro";

import data from "../data/services.json";

const colorMap = {
  blue: {
    bg: "from-blue-400 to-blue-600",
    text: "text-blue-800",
  },
  green: {
    bg: "from-green-400 to-green-600",
    text: "text-green-800",
  },
};
---

<PageLayout>
  <Header 
    title={data.title}
    subtitle={data.subtitle}
  />

  <section class="px-4 py-16 space-y-16">
    <!-- Introducci√≥n -->
    <div class="text-center max-w-4xl mx-auto">
      <p class="text-lg md:text-xl text-gray-700 leading-relaxed">
        {data.content}
      </p>
      <div class="badge badge-lg badge-success text-white mt-6">
        üêæ Pet Friendly
      </div>
    </div>

    <!-- Servicios Principales -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {data.services.map((service, index) => {
        const isEven = index % 2 === 0;

        return(
        <ServiceCard isEven={isEven} title={service.title} service={service.content} imageSrc={service.img}/>
        )
      })}
    </div>   

    <!-- Importancia del Mantenimiento -->
    <div class="bg-white rounded-3xl shadow-xl p-8 md:p-12 mt-16">
      <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-8">
        {data.maintenance.title}
      </h2>

      <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {data.maintenance.content.map((item, index) => {
          const isEven = index % 2 === 0;

          return (
            <div class="space-y-4">
              <div class={`w-full h-40 rounded-2xl flex items-center justify-center`}>
                <span class="text-white text-lg font-semibold">
                  <img src={`/images/${item.img}`} class="max-h-40" alt={item.title}/>
                </span>
              </div>
              <h3 class={`text-2xl font-bold ${isEven ? "text-blue-800" : "text-green-800"}`}>{item.title}</h3>
              <p class="text-gray-700 leading-relaxed">
                {item.description}
              </p>
            </div>
          )
        })}
      </div>
    </div>  

    <RequestQuote
      title="¬øNecesitas mantener tu pasto sint√©tico?"
      subtitle="Cont√°ctanos hoy y recibe una evaluaci√≥n gratuita de tu espacio"
      btnText="Solicita tu presupuesto"
    />      
  </section>
</PageLayout>
---
const { 
  title = "Sin Imagen", 
  subtitle = "Sin Imagen", 
  imageSrc = "/images/icon_image.png"
} = Astro.props;

const finalImage = imageSrc || "/images/icon_image.png";
---

<div class="card bg-white shadow-xl hover:shadow-2xl transition-all overflow-hidden group">
  <figure class="relative h-80 overflow-hidden">
    <div class="w-full h-full bg-linear-to-br from-orange-300 to-orange-500 flex items-center justify-center">
      <img src={finalImage} alt="PÃ¡del" class="fill h-full w-full object-cover object-center transition-transform group-hover:scale-105"/>
    </div>
    <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
      <button class="btn btn-circle btn-lg bg-white text-black">
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
        </svg>
      </button>
    </div>
  </figure>
  <div class="card-body">
    <h3 class="card-title text-orange-800">{title}</h3>
    <p class="text-gray-600 text-sm">{subtitle}</p>
  </div>
</div>
---
const { 
  title, 
  subtitle,
  btnText
} = Astro.props;
---

<section class="bg-linear-to-r from-green-600 to-blue-600 rounded-3xl shadow-xl p-12 text-center text-white mt-16">
  <h3 class="text-3xl md:text-4xl font-bold mb-6">{title}</h3>
  <p class="text-xl mb-8 max-w-2xl mx-auto">
    {subtitle}
  </p>
  <a
    href="/contact"
    class="btn btn-success btn-lg rounded-full text-white hover:scale-105 transition-transform"
  >
    {btnText}
  </a>
</section>